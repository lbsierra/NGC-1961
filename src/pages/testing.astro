---
import Layout from '../layouts/Layout.astro';
import TestingPanel from '../components/Testing.vue';
---

<Layout title="Testing Environment">
  <section id="testing-main">
    <section class="title-box">
      <h1 class="main-title">Testing Environment</h1>
    </section>
    
    <section id="testing-box">
      <section id="test-content" class="content-box">
        <h2>API Testing</h2>
        <p>This section is for testing API calls and environment variables.</p>
        <TestingPanel client:load />
      </section>
    </section>
  </section>
</Layout>
 