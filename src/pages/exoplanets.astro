---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <section id="exoplanet-catalog">
        <h2>Exoplanet Catalog</h2>
        <div id="planet-grid"></div>
    </section>
</Layout>

<style>
    #exoplanet-catalog {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    #planet-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
    }
</style>